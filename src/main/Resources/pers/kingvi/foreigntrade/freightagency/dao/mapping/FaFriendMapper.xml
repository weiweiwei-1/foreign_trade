<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="pers.kingvi.foreigntrade.freightagency.dao.FaFriendMapper" >
    <resultMap id="BaseResultMap" type="pers.kingvi.foreigntrade.po.Friend" >
        <id column="id" property="id" jdbcType="INTEGER" />
        <result column="user_id" property="faId" jdbcType="BIGINT" />
        <result column="friend_id" property="ftsId" jdbcType="BIGINT" />
        <result column="user_mark" property="faMark" jdbcType="VARCHAR" />
        <result column="friend_mark" property="ftsMark" jdbcType="VARCHAR" />
        <result column="add_time" property="addTime" jdbcType="TIMESTAMP" />
    </resultMap>

    <sql id="Base_Column_List" >
    id, user_id, friend_id, user_mark, friend_mark, add_time
    </sql>

    <select id="selectFriend" resultMap="BaseResultMap" parameterType="Friend">
        select
        <include refid="Base_Column_List"/>
        from friend where user_id = #{faId,jdbcType=BIGINT} and friend_id = #{ftsId,jdbcType=BIGINT}
    </select>

    <select id="selectFriendList" resultMap="BaseResultMap" parameterType="long">
        select
        <include refid="Base_Column_List"></include>
        from friend where user_id = #{faId,jdbcType=BIGINT}
    </select>

    <select id="selectByCondition" resultType="pers.kingvi.foreigntrade.po.ForeignTradeSaleman" parameterType="string">
        select * from foreign_trade_saleman where account = #{condition, jdbcType=VARCHAR} or name like concat('%',#{condition,jdbcType=VARCHAR},'%')
    </select>
</mapper>