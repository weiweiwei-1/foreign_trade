<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="pers.kingvi.foreigntrade.foreigntradesaleman.dao.FtsFriendMapper" >
    <resultMap id="BaseResultMap" type="pers.kingvi.foreigntrade.po.Friend" >
        <id column="id" property="id" jdbcType="INTEGER" />
        <result column="userId" property="faId" jdbcType="BIGINT" />
        <result column="friend_id" property="ftsId" jdbcType="BIGINT" />
        <result column="user_mark" property="faMark" jdbcType="VARCHAR" />
        <result column="friend_mark" property="ftsMark" jdbcType="VARCHAR" />
        <result column="add_time" property="addTime" jdbcType="TIMESTAMP" />
    </resultMap>

    <sql id="Base_Column_List" >
    id, user_Id, friend_id, user_mark, friend_mark, add_time
  </sql>

    <select id="selectFriend" resultMap="BaseResultMap" parameterType="Friend">
        select
        <include refid="Base_Column_List"/>
        from friend where user_id = #{faId,jdbcType=BIGINT} and friend_id = #{ftsId,jdbcType=BIGINT}
    </select>

</mapper>